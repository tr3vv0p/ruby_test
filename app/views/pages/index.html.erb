<div class="inner cover">
  <form class="form-signin" action="/users" method="POST" name="user">
    <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
    <h1 class="cover-heading">Sign Up</h1>
    <label for="inputName" class="sr-only">Name</label>
    <input type="text" id="inputName" value name="user[name]" class="form-control" placeholder="Name" required autofocus>
    <label for="inputEmail" class="sr-only">Email address</label>
    <input type="email" value name="user[email]" id="inputEmail" class="form-control" placeholder="Email address" required>
    <label for="inputPassword" class="sr-only">Password</label>
    <input type="password" value name="user[password]" id="inputPassword" class="form-control" placeholder="Password" required>

    <div class="radio-inline">
      <label>
        <input type="radio" name="user[user_type]" value="student"  checked="checked"> Student
      </label>
    </div>
    <div class="radio-inline">
      <label>
        <input type="radio" name="user[user_type]" value="staff"> Staff
      </label>
    </div>

    <button class="btn btn-lg btn-primary btn-block" type="submit">Sign up</button>
  </form>
</div>
